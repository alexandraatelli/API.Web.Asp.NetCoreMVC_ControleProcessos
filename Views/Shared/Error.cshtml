@model ErrorViewModel
@{
    ViewData["Title"] = "Erro!";
}

@{
    if (Model == null)
    {
        
        <div>
            <h2>Ops! Erro! Não se preocupe. Nosso time o corrigirá em breve!</h2>        
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}
